&НаКлиенте
Процедура РежимПриИзменении(Элемент)

// Инициализация переменных
//-------------------------------------------------------------------------------------------------
	НеРаботает = ПредопределенноеЗначение("Перечисление.РежимРаботыОбъекта.Выходной");
	Префикс = Лев(СокрЛП(Элемент.Имя),3);

// Если установлен нерабочий режим, то очистим значения реквизитов отвечающих за часы работы
//-------------------------------------------------------------------------------------------------
	Если (Объект[Префикс + "Режим"] = ПредопределенноеЗначение("Перечисление.РежимРаботыОбъекта.Выходной")) Тогда
		Объект[Префикс + "Нач"] = Неопределено;
		Объект[Префикс + "Кон"] = Неопределено;
	КонецЕсли;

	ОбновлениеОтображения();
КонецПроцедуры
