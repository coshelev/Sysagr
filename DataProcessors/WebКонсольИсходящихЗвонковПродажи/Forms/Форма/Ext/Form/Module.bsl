		Запрос.УстановитьПараметр("НаименованиеГруппы", "%АНКЕТА%");
		//НормативныйПериодОбновленияОтветаНаВопросВМесяцах = 3;	
		//НеПоказыватьОтветыНаВопросыТребующиеОбновленияОтвета = ЛОЖЬ;
